  function generate(){
    const name = safe(document.getElementById('name').value) || "ë‹¹ì‹ ";
    const shift = document.getElementById('shift').value;
    const keyword = document.getElementById('keyword').value;
    const wish = safe(document.getElementById('wish').value);
    const worry = safe(document.getElementById('worry').value);

