    lines.push(`- ${pick(workTips[shift])}`);
    lines.push(`- ${pick(safetyTips)}`);

    lines.push(``);
    lines.push(`â‘¢ ê±´ê°•Â·ìƒí™œ ìš´`);
    lines.push(`- ${pick(healthTips)}`);
